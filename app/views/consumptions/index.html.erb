<div class="container">

	<div class="row">
		<div class="col-12">
			<h1>Mes consommations d'essence:</h1>
			<%= current_user.email %>
			<%= link_to "Déconnexion", destroy_user_session_path(current_user), method: :delete, data: {confirm: "Sure??"}  %>
			<hr>
		</div>
	</div>
	<%= form_tag consumptions_path, method: :get do  %>
		<div class="row">
			<div class="col-4">
					<%= text_field_tag "search[date_from]", @search.date_from, class: "datepicker" %>
			</div>
			<div class="col-4">
				<%= text_field_tag "search[date_to]", @search.date_to, class: "datepicker" %>
			</div>

			<div class="col-offset-1 col-3">
				<%= submit_tag "Rechercher", class: "btn btn-primary" %>
			</div>	  
		<% end %>
		</div>
		<br>
		<div class="row">
			<div class="col-12">
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th scope="col">Date</th>
				      <th scope="col">Magasin</th>
				      <th scope="col">€/l</th>
				      <th scope="col">Km</th>
							<th scope="col">€ Total</<th></th>
				    </tr>
				  </thead>
				  	<tbody>
				  		<% @consumptions.each do |c| %>

				  		<% if c.user_id == current_user.id %>
				  			
				  		<tr>
				  			<td><%= c.created_at.strftime("%d/%m/%Y") %></td>
				  			<td><%= c.shop %></td>
				  			<td><%= c.liter_price %></td>
				  			<td><%= c.kilometers %></td>
				  			<td><%= c.total_price %></td>
				  			<td class= "actions">
				  				<%= link_to edit_consumption_path(c) do %>
				  					<i class="fas fa-edit"></i>
				  				<% end %>
				  			</td>
				  			<td class= "actions">
				  				<%= link_to  consumption_path(c), method: :delete, data: {confirm: 'are you sure?'}  do %>		  				
										<i class="fas fa-trash-alt"></i>
									<% end %>
				  			</td>

				  		</tr>
				  		<% end %>
				  		<% end %>

				  	</tbody>
				  	
			
				</table>
			</div>

		</div>

		<div class="row">
			<div class="col-12">
				<hr>
				<p>Nombre de pleins: <%= @consumptions.count %></p>
				<p>Montant total des consomations: <%= @consumptions.total_price %>€</p>
				<p>Nombre total de kilomètres: <%= @consumptions.total_km %>km </p>
			</div>
		</div>
		<div class="row">
			<div class="col-4">
				<%= link_to "ajouter", new_consumption_path, class: "btn btn-primary btn-lg"  %>
			</div>
		</div>
</div>